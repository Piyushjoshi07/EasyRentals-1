<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.csci567.easyrentals.InsuranceDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View android:layout_height="70dp"
            android:layout_width="match_parent"
            android:background="#ff9800"
            android:id="@+id/titleBackground"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/finalStepTitle"
            android:textColor="#000"
            android:textSize="23sp"
            android:gravity="center"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/exteriorText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/registrationImage"
            android:layout_marginTop="20dp"
            android:textColor="#000"
            android:layout_below="@id/titleBackground"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/image_display1"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/exteriorText1"
            android:layout_alignParentRight="true"
            tools:ignore="ContentDescription"
            android:layout_alignParentEnd="true"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/uploadImage"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:background="#000"
            android:id="@+id/upload_button1"
            android:layout_below="@+id/image_display1"
            android:onClick="uploadOptions"/>

        <TextView
            android:id="@+id/exteriorText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insuranceImage"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:layout_below="@id/upload_button1"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/image_display2"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/exteriorText2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            tools:ignore="ContentDescription"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/uploadImage"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:background="#000"
            android:id="@+id/upload_button2"
            android:layout_below="@+id/image_display2"
            android:onClick="uploadOptions"/>

        <TextView
            android:id="@+id/exteriorText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/drivingLicenseIimage"
            android:layout_marginTop="10dp"
            android:textColor="#000"
            android:layout_below="@id/upload_button2"/>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/image_display3"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/exteriorText3"
            android:layout_alignParentRight="true"
            tools:ignore="ContentDescription"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/uploadImage"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:textColor="#ffffff"
            android:background="#000"
            android:id="@+id/upload_button3"
            android:layout_below="@+id/image_display3"
            android:onClick="uploadOptions"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/expectedRentAmount"
            android:textColor="#000"
            android:textSize="14sp"
            android:textAlignment="center"
            android:id="@+id/seekBarTitle"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/upload_button3"/>

        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/seekBarTitle"
            android:id="@+id/priceSeekBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minValue0"
            android:textColor="#000"
            android:textSize="14sp"
            android:id="@+id/seekBarMinValue"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:layout_below="@+id/priceSeekBar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/maxValue20000"
            android:textColor="#000"
            android:textSize="14sp"
            android:id="@+id/seekBarMaxValue"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/priceSeekBar"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seekBarMinValue"
            android:textSize="14sp"
            android:textColor="#000"
            android:id="@+id/seekBarValue"
            android:text="@string/selectedPrice"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"/>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/next"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="#000"
            android:layout_marginBottom="10dp"
            android:id="@+id/nextButton1"
            android:layout_below="@id/seekBarValue"
            android:onClick="onNextPressed"/>


    </RelativeLayout>
</ScrollView>
